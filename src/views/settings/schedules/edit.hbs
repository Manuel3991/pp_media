<div class="container-fluid">
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card text-center bg-dark">
                    <div class="card-header">
                        <h3 class="text-white">Edit Schedule</h3>
                    </div>
                    <div class="card-body">
                        <form action="/schedule/edit/{{schedules.idschedule}}" method="POST">
                            <div class="form-group">
                                <input type="text" name="schedule_name" placeholder="Name" value="{{schedules.schedule_name}}" class="form-control" autofocus>
                            </div>
                            <div class="form-group">
                                <input type="time" id="shour" name="start_hour" value="{{schedules.start_hour}}" min="06:00" max="18:00" class="form-control"
                                    required>
                            </div>
                            <div class="form-group">
                                <input type="time" id="chour" name="close_hour" value="{{schedules.close_hour}}" min="06:00" max="18:00" class="form-control"
                                    required>
                            </div>
                            <div class="form-group">
                                <textarea name="comment" rows="3" class="form-control" 
                                    placeholder="Comments">{{schedules.comment}}</textarea>
                            </div>
                            <div class="form-group">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="active" name="active" {{#if schedules.active}} checked {{/if}} >
                                    <label class="form-check-label text-white" for="active">Active</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-danger btn-block">
                                    Save Schedule
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>