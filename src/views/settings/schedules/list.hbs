<div class="container-fluid">
    <div class="table-responsive">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">&nbsp;Name</th>
                    <th scope="col">Star Hour</th>
                    <th scope="col">Close Hour</th>
                    <th scope="col">Comments</th>
                    <th scope="col">&nbsp;Status</th>
                    <th scope="col" class="text-center">Option</th>

                </tr>
            </thead>
            <tbody class="bg-light">
                {{#each schedule}}
                <tr>
                    <th scope="row">{{schedule_name}}</th>
                    <td>&nbsp;{{start_hour}}</td>
                    <td>&nbsp;{{close_hour}}</td>
                    <td>{{comment}}</td>
                    {{!-- <td>
                        <input class="form-check-input" type="checkbox" id="defaultCheck1" {{#if active}} checked
                            {{/if}}>
                    </td> --}}
                    <td>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="active" {{#if active}} checked
                                disabled{{/if}}>
                            <label class="custom-control-label" for="active">Active</label>
                        </div>
                    </td>
                    <td><a href="/schedule/edit/{{idschedule}}" class="btn btn-secondary btn-block">Edit</a></td>
                    {{!-- <td><a href="/users/delete/{{iduser}}" class="btn btn-danger btn-block">Delete</a></td> --}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="d-sm-flex justify-content-between align-items-center mb-4 float-xl-right">
        <a class="btn btn-danger btn-sm d-none d-sm-inline-block" role="button" href="/schedule/add"><i
                class="fas fa-plus-square fa-sm text-white-50"></i>&nbsp;Add new schedule</a>
                
    </div>
</div>